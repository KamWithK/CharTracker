{
    "manifest_version": 2,
    "name": "CharTracker",
    "version": "0.0.1",
  
    "description": "Completely automated reading statistics and tracking",

    "background": {
      "persistent": true,
      "scripts": ["build/background.js"]
    },
    "content_scripts": [{
      "matches": [
        "https://kamwithk.github.io/CharTracker/char-tracker.html",
        "file:///*/CharTracker/*/char-tracker.html"
      ],
      "js": ["build/inject.js"]
    }],

    "permissions": [
      "storage",
      "unlimitedStorage",
      "downloads"
    ]
  }
  