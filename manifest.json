{
    "manifest_version": 2,
    "name": "CharTracker",
    "version": "0.0.1",
  
    "description": "Completely automated reading statistics and tracking",

    "background": {
      "persistent": true,
      "scripts": ["background.js"]
    },
    "content_scripts": [{
      "matches": ["https://kamwithk.github.io/CharTracker/char-tracker.html"],
      "js": ["inject.js"]
    }],

    "permissions": [
      "storage",
      "unlimitedStorage"
    ]
  }
  