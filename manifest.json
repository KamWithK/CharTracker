{
    "manifest_version": 2,
    "name": "exSTATic",
    "version": "0.0.1",
  
    "description": "Completely automated reading statistics and tracking",

    "background": {
      "persistent": true,
      "scripts": ["build/background.js"]
    },
    "content_scripts": [
      {
        "matches": [
          "https://kamwithk.github.io/exSTATic/tracker.html",
          "file:///*/exSTATic/*/tracker.html"
        ],
        "js": ["build/vn/tracker_inject.js"]
      },
      {
        "matches": [
          "https://*/Manga/**.html",
          "file:///*/Manga/**.html"
        ],
        "js": ["build/mokuro/mokuro_inject.js"],
        "css": [
          "build/mokuro/mokuro_inject.css"
        ]
      },
      {
        "matches": [
          "https://kamwithk.github.io/exSTATic/stats.html",
          "file:///*/exSTATic/*/stats.html"
        ],
        "js": ["build/stats_inject.js"]
      }
    ],

    "browser_action": {
      "default_icon": {
          "100": "docs/favicon_100x100.png",
          "500": "docs/favicon.png"
      }
    },

    "permissions": [
      "storage",
      "unlimitedStorage",
      "tabs",
      "downloads"
    ]
  }
  